{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": ["**", "!subdomain/**"]
  },
  "linter": {
    "rules": {
      "style": {
        "useFilenamingConvention": {
          "options": {
            "filenameCases": ["camelCase", "PascalCase", "kebab-case"]
          }
        }
      },
      "nursery": {
        "noUnknownAtRule": "off"
      }
    }
  }
}
